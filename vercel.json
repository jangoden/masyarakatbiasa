{
  "rewrites": [
    {
      "source": "/blog/(.*)",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(?i)(facebookexternalhit|whatsapp|twitterbot|bot|crawler|spider)"
        }
      ],
      "destination": "/api/blog-og?slug=$1"
    },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/" }
  ]
}
